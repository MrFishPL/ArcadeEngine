{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src", "EngineFiles/Camera.ts", "EngineFiles/functions.ts", "EngineFiles/Game.ts", "EngineFiles/GameObject.ts", "EngineFiles/Line.ts", "EngineFiles/Line2d.ts", "EngineFiles/Line3d.ts", "EngineFiles/Point.ts", "EngineFiles/Point2d.ts", "EngineFiles/Point3d.ts", "EngineFiles/Scene.ts", "EngineFiles/types.ts"]
}
